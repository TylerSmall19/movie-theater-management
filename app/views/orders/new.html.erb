<h1><%= @showtime.movie.title %></h1>

<p> <%= @showtime.movie.description %> </p>

<p>
  <span> Showtime: </span> <%= @showtime.pretty_time %> |
  <span> Tickets Available: </span> <%= @showtime.tickets.length %>
</p>

<h3> Buy Tickets: </h3>
<%= form_for [@showtime, Order.new] do |f| %>
  <%= f.label :name %> <br>
  <%= f.text_field :name %>
  <br>
  <%= f.label :email %> <br>
  <%= f.text_field :email %>
  <br>
  <%= f.label :credit_card %> <br>
  <%= f.text_field :credit_card %>
  <br>
  <%= f.label :expiration %> <br>
  <%= f.text_field :expiration %>
<% end %>
