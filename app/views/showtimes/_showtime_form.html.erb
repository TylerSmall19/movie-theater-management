<%= bootstrap_form_for [showtime.movie, showtime] do |f| %>
  <%= f.collection_select(:screen_id, Screen.all, :id, :number, value: showtime.screen_id) %>
  <%= f.time_select :time, ampm: true, minute_step: 5, value: showtime.time %>
  <%= f.text_field :price, value: showtime.price %>
  <%= f.submit "Add", :disable_with => 'Adding...' %>
<% end %>
