<h1>Add a Showtime for <span class="movie-title"> <%= @movie.title %> </span> </h1>

<% if @errors %>
  <% @errors.each do |error| %>
    <%= render partial: "shared/error", locals: { error: error } %>
  <% end %>
<% end %>

<%= form_for [@movie, @showtime] do |f| %>
  <%= f.label :screen_id, "Screen" %>:
  <%= f.collection_select(:screen_id, Screen.all, :id, :number, value: @showtime.screen_id) %>
  <br> <br>
  <%= f.label :time, "Time" %> <br>
  <%= f.time_select :time, ampm: true, minute_step: 5, value: @showtime.time %>
  <br> <br>
  <%= f.label :price, "Price (Ex: 15, 10.00, etc.)" %><br>
  <%= f.text_field :price, value: @showtime.price %>
  <br> <br>
  <%= f.submit "Add", :disable_with => 'Adding...' %>
<% end %>
